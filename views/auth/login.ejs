<%- include('../partials/header') %>

<div class="auth-container">
    <h2>Login to GameLog</h2>

    <%# This block displays any generic errors passed from the controller %>
    <% if (errors && errors.length > 0) { %>
        <div class="error-message">
            <ul>
                <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                <% }) %>
            </ul>
        </div>
    <% } %>

    <form action="<%= url('/login') %>" method="POST" class="auth-form">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" value="<%= oldInput.email || '' %>" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
    <p class="auth-switch">Don't have an account? <a href="<%= url('/register') %>">Register here</a></p>
</div>

<%- include('../partials/footer') %>